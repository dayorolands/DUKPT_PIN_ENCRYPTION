<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <EditText
            android:id="@+id/ipekValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:hint="IPEK"
            android:text=""
            />

        <EditText
            android:id="@+id/ksnValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:hint="KSN"
            android:layout_marginTop="10dp"
            android:text=""
            />

        <EditText
            android:id="@+id/ksnCountValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:hint="KSN COUNTER"
            android:text=""
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="2dp">

            <TextView
                android:id="@+id/switchTexts"
                android:layout_width="1in"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:hint="TEST KEYS"
                android:text=""
                />

            <Switch
                android:id="@+id/switchKeys"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="10dp"
                android:textSize="20sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/workingKeyBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/black"
            android:layout_marginLeft="210sp"
            android:layout_marginTop="20dp"
            android:text="WORKING KEY"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/workingKeyValue"
            android:layout_marginTop="10dp"
            android:layout_width="15in"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:hint="WORKING KEY"
            android:text=""
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp">

            <EditText
                android:id="@+id/clearPan"
                android:layout_width="15in"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:hint="CARD PAN"
                android:text=""
                />

            <EditText
                android:id="@+id/clearPin"
                android:layout_width="15in"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:hint="CARD PIN"
                android:text=""
                />

            <Button
                android:id="@+id/encryptButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/black"
                android:layout_marginLeft="140sp"
                android:layout_marginTop="20dp"
                android:text="ENCRYPT"
                android:textColor="@color/white" />

        </LinearLayout>




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>